@using Microsoft.AspNet.Identity;
@model WebApplicationMarketing.Models_.OnlinePay

@{
    ViewData["Title"] = "Добавить данные";
    string id_user = User.Identity.GetUserId();
}

<h3>Добавить данные</h3>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="PaySiteRub" class="control-label">Покупки на сайте (руб)</label>
                <input asp-for="PaySiteRub" class="form-control" />
                <span asp-validation-for="PaySiteRub" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PaySiteCount" class="control-label">Покупки на сайте (шт)</label>
                <input asp-for="PaySiteCount" class="form-control" />
                <span asp-validation-for="PaySiteCount" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="OnlineSales" class="control-label">Онлайн продажи</label>
                <input asp-for="OnlineSales" class="form-control" />
                <span asp-validation-for="OnlineSales" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="AverageCheck" class="control-label">Средний чек</label>
                <input asp-for="AverageCheck" class="form-control" />
                <span asp-validation-for="AverageCheck" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="PayConversion" class="control-label">Конверсия в покупку</label>
                <input asp-for="PayConversion" class="form-control" />
                <span asp-validation-for="PayConversion" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="DataMonth" class="control-label">Дата</label>
                <input asp-for="DataMonth" class="form-control" />
                <span asp-validation-for="DataMonth" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <input asp-for="Id" class="input-none" value="@id_user" readonly />
            </div>
        </form>
    </div>
</div>

