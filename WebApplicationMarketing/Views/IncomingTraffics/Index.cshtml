@model IEnumerable<WebApplicationMarketing.Models_.IncomingTraffic>

@{
    ViewData["Title"] = "Входящий трафик";
}

<div class="table-wrap">
    <table class="table-1">
        <thead>
            <tr>
                <th></th>
                @foreach (var item in Model)
                {
                    <th>
                        <div>@Convert.ToString(string.Format("{0:Y}", item.DataMonth))</div>
                    </th>
                }
            </tr>
        </thead>
        <tbody>
            <tr>
                <th>Из интернета (без ГВ)</th>
                @foreach (var item in Model)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.IncomTrafficGv)
                    </td>
                }
            </tr>
            <tr>
                <th>Всего (МОП)</th>
                @foreach (var item in Model)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.IncomTrafficMop)
                    </td>
                }
            </tr>
            <tr>
                <th>Продано новых карт</th>
                @foreach (var item in Model)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.NewCardsSold)
                    </td>
                }
            </tr>
            <tr>
                <th>Конверсия ОП</th>
                @foreach (var item in Model)
                {
                    <td>
                        @Html.DisplayFor(modelItem => item.OpConversion)
                    </td>
                }
            </tr>
            <tr class="delete">
                <th class="delete"></th>
                @foreach (var item in Model)
                {
                    <td class="delete">
                        @*<a asp-action="Edit" asp-route-id="@item.IdUt">Edit</a>
                            <a asp-action="Details" asp-route-id="@item.IdUt">Details</a>*@
                        <a asp-action="Delete" asp-route-id="@item.IdIt"><img src="~/trash-alt-regular.svg" width="20" height="20"></a>
                    </td>
                }
            </tr>
        </tbody>
    </table>
</div>
<br>
<br>
<a class="btn btn-success" asp-area="Identity" asp-page="/Account/Tables/_MyPage">Назад</a>
