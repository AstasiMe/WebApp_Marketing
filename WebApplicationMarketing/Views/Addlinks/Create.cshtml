@using Microsoft.AspNet.Identity;
@model WebApplicationMarketing.Models_.Addlink

@{
    ViewData["Title"] = "Добавить ссылки";
    string id_user = User.Identity.GetUserId();
}

<h4>Добавить ссылки</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>

            <div class="form-group">
                <label asp-for="YandexLink" class="control-label">Ссылка на отчет ЯндексМетрика</label>
                <input asp-for="YandexLink" class="form-control" />
                <span asp-validation-for="YandexLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="GaLink" class="control-label">Ссылка на отчет Google Analitycs</label>
                <input asp-for="GaLink" class="form-control" />
                <span asp-validation-for="GaLink" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Создать" class="btn btn-primary" />
            </div>
            <div class="form-group">
                <input asp-for="Id" class="input-none" value="@id_user" readonly />
                @*<select asp-for="Id" class="form-control" asp-items="ViewBag.Id"></select>*@
            </div>

        </form>
    </div>
</div>

@*<div>
        <a asp-action="Index">Назад</a>
    </div>*@

@section Scripts {
    @{await Html.RenderPartialAsync("_ValidationScriptsPartial");}
}
